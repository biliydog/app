border-1px($color,$width,$left)
  position relative
  &:after
    display block
    content  "   "
    position absolute
    left $left
    bottom 0
    width $width
    border-top 1px solid $color

border-1px2($color)
  position relative
  &:after
    display block
    content  "   "
    position absolute
    left 0
    top 0
    width 100%
    border-top 1px solid $color

border-none()
  position relative
  &:after
    display none

border-1px3($color)
  position relative
  &:after
    display block
    content  "   "
    position absolute
    left 0
    top 0
    width 100%
    border-left  1px solid $color

bg-img($url)
  background-image url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image url($url + "@3x.png")
